<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tv_joueur_tour"
        android:layout_width="234dp"
        android:layout_height="55dp"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Joueur actuel"
        android:textSize="34sp"
        app:barrierMargin="10dp"
        app:drawableTint="#009688"
        app:drawableTintMode="screen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_jeu_action_verite"
        android:layout_width="174dp"
        android:layout_height="36dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="Action/Vérité"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_joueur_tour" />

    <TextView
        android:id="@+id/tv_jeu_nb_points"
        android:layout_width="174dp"
        android:layout_height="36dp"
        android:layout_marginStart="228dp"
        android:layout_marginLeft="228dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="2 points"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_joueur_tour" />

    <TextView
        android:id="@+id/tv_jeu_gage"
        android:layout_width="174dp"
        android:layout_height="36dp"
        android:layout_marginStart="97dp"
        android:layout_marginLeft="97dp"
        android:layout_marginTop="21dp"
        android:gravity="center"
        android:text="Gage"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_jeu_contenu_q" />

    <TextView
        android:id="@+id/tv_jeu_contenu_q"
        android:layout_width="381dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/text_view_border"
        android:gravity="center"
        android:scrollbars="vertical"
        android:text="blablabla"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_jeu_action_verite" />

    <TextView
        android:id="@+id/tv_jeu_gage_q"
        android:layout_width="389dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/text_view_border"
        android:gravity="center"
        android:scrollbars="vertical"
        android:text="blablabla"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_jeu_gage" />

    <Button
        android:id="@+id/bt_gage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="25dp"
        android:text="Gage"
        app:backgroundTint="#FF9800"
        app:layout_constraintStart_toEndOf="@+id/bt_reussite"
        app:layout_constraintTop_toBottomOf="@+id/tv_jeu_gage_q" />

    <Button
        android:id="@+id/bt_reussite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="25dp"
        android:text="Réussite"
        app:backgroundTint="#009688"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_jeu_gage_q" />

    <Button
        android:id="@+id/bt_echec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:text="échec"
        app:backgroundTint="#E91E63"
        app:layout_constraintStart_toEndOf="@+id/bt_gage"
        app:layout_constraintTop_toBottomOf="@+id/tv_jeu_gage_q" />

</androidx.constraintlayout.widget.ConstraintLayout>