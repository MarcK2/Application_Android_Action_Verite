<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_joueur_actu"
        android:layout_width="277dp"
        android:layout_height="138dp"
        android:layout_marginStart="57dp"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="25dp"
        android:background="#CEEFEC"
        android:gravity="center"
        android:text="C'est au tour du Joueur : ..."
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="167dp"
        android:text="Action"
        app:backgroundTint="#E91E63"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_joueur_actu" />

    <Button
        android:id="@+id/bt_verite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="114dp"
        android:layout_marginLeft="114dp"
        android:layout_marginTop="167dp"
        android:text="vérité"
        app:backgroundTint="#3F51B5"
        app:layout_constraintStart_toEndOf="@+id/bt_action"
        app:layout_constraintTop_toBottomOf="@+id/tv_joueur_actu" />
</androidx.constraintlayout.widget.ConstraintLayout>