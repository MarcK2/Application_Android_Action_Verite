<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_add_question"
        android:layout_width="247dp"
        android:layout_height="50dp"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/text_view_border"
        android:gravity="center"
        android:text="Ajouter Action/Vérité"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_genre"
        android:layout_width="55dp"
        android:layout_height="33dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/text_view_border"
        android:gravity="center"
        android:text="Genre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_cat_age"
        android:layout_width="94dp"
        android:layout_height="32dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/text_view_border"
        android:gravity="center"
        android:text="Catégorie Age"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_genre" />

    <TextView
        android:id="@+id/tv_contenu"
        android:layout_width="66dp"
        android:layout_height="31dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/text_view_border"
        android:gravity="center"
        android:text="Contenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_cat_age" />

    <TextView
        android:id="@+id/tv_nb_pt"
        android:layout_width="115dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/text_view_border"
        android:gravity="center"
        android:text="Nombre de points"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_contenu" />

    <TextView
        android:id="@+id/tv_gage"
        android:layout_width="64dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/text_view_border"
        android:gravity="center"
        android:text="Gage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nb_pt" />

    <EditText
        android:id="@+id/et_nb_pt"
        android:layout_width="115dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="number"
        android:text="1"
        app:layout_constraintStart_toEndOf="@+id/tv_nb_pt"
        app:layout_constraintTop_toBottomOf="@+id/et_contenu"
        tools:ignore="TouchTargetSizeCheck" />

    <Spinner
        android:id="@+id/sp_genre"
        android:layout_width="208dp"
        android:layout_height="49dp"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="24dp"
        android:contentDescription="..."
        app:layout_constraintStart_toEndOf="@+id/tv_genre"
        app:layout_constraintTop_toBottomOf="@+id/tv_add_question"
        tools:ignore="TouchTargetSizeCheck" />

    <Spinner
        android:id="@+id/sp_cat_age"
        android:layout_width="209dp"
        android:layout_height="47dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="20dp"
        android:contentDescription="..."
        android:minHeight="48dp"
        app:layout_constraintStart_toEndOf="@+id/tv_cat_age"
        app:layout_constraintTop_toBottomOf="@+id/sp_genre"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/et_contenu"
        android:layout_width="218dp"
        android:layout_height="95dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Mettez le contenu "
        android:inputType="textMultiLine"
        app:layout_constraintStart_toEndOf="@+id/tv_contenu"
        app:layout_constraintTop_toBottomOf="@+id/sp_cat_age" />

    <EditText
        android:id="@+id/et_gage"
        android:layout_width="218dp"
        android:layout_height="95dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Mettez lui un gage en cas de non-accomplissement"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toEndOf="@+id/tv_gage"
        app:layout_constraintTop_toBottomOf="@+id/et_nb_pt" />

    <Button
        android:id="@+id/bt_add_qst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginLeft="156dp"
        android:layout_marginBottom="28dp"
        android:text="Ajouter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>